@model CourierApp.Core.ViewModels.Review.CreateReviewViewModel

@{
    ViewData["Title"] = "Dodaj opinię";

    var selectList = new List<SelectListItem>();

    selectList.Add(new SelectListItem("0", "0"));
    selectList.Add(new SelectListItem("1", "1"));
    selectList.Add(new SelectListItem("2", "2"));
    selectList.Add(new SelectListItem("3", "3"));
    selectList.Add(new SelectListItem("4", "4"));
    selectList.Add(new SelectListItem("5", "5"));
}
@if (Model.Link == null)
{
    <div class="container">
        <div class="row mt-3">
            <div class="offset-md-2 col-md-8">
                <h3 style="text-align: center">Aby ocenić nasze usługi, musisz wejść na stronę której adres otrzymałeś w wiadomości po odebraniu przesyłki. Jeżeli nie dostałeś takiej wiadomości a paczka znajduje się w Twoich rękach, skontaktuj się z nami.</h3>
            </div>
        </div>
    </div>
}
@if (Model.Link != null)
{
    <div class="container">
        <div class="row mt-3">
            <div class="col-md-8 offset-md-2 py-lg-5">
                <div class="row mb-3">
                    <div class="col-md-12 h3 text-center">
                        Oceń nas!   
                        <hr />
                    </div>
                </div>
                <div class="row ">
                    <div class="col-md-8 offset-md-2 text-left ">
                        @await Html.PartialAsync("_ValidationSummary")
                        <form asp-controller="Review" asp-action="Create" method="post" autocomplete="on">
                            <div class="row pt-1">
                                <div class="col-md-12 text-left">
                                    <label asp-for="Content"></label>*
                                </div>
                                <div class="col-md-12">
                                    @Html.TextAreaFor(x => x.Content, 5,5, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row pt-1 ">
                                <div class="col-md-12 text-left">
                                    <label asp-for="Mark"></label>*
                                </div>
                                <div class="col-md-12">
                                    @Html.DropDownListFor(x => x.Mark, selectList, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row pt-1 d-none">
                                <div class="col-md-3 text-right py-2">
                                    <label asp-for="Link"></label>
                                </div>
                                <div class="col-md-9">
                                    <input asp-for="Link" type="text" class="form-control" />
                                </div>
                            </div>

                            <div class="row mt-5">
                                <div class="col-md text-right">
                                    <input type="submit" value="Zapisz" class="btn btn-success w-100" />
                                </div>
                                <div class="col-md text-right">
                                    <a class="btn btn-secondary w-100" asp-action="Index" asp-controller="Home">Anuluj</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}