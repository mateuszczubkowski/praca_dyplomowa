@model CourierApp.Core.ViewModels.Packages.ChangePackageCourierViewModel

@{
    ViewData["Title"] = "Przypisz paczki kurierowi";
}

<h1>ChangePackageCourier</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <hr />
                @Html.EditorFor(m => m.Packages)
                <div class="form-group">
                    <label asp-for="CourierId"></label>
                    @Html.DropDownListFor(m => m.CourierId, Model.Couriers, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Dodaj paczkę</button>
                </div>
            </form>
        </section>
    </div>
</div>