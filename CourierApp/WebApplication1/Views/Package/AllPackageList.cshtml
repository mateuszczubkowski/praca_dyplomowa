@model IEnumerable<CourierApp.Core.ViewModels.Packages.AllPackagesListViewModel>

@{
    ViewData["Title"] = "Moje paczki";
}

@(Html
      .Grid(Model)
      .Build(columns =>
      {
          columns.Add(model => model.CustomerEmail).Titled("E-mail");
          columns.Add(model => model.Courier).Titled("Kurier");
          columns.Add(model => model.Address).Titled("Adres dostawy");
          columns.Add(model => model.Status).Titled("Status");
      })
      .Empty("Brak danych")
      .Filterable()
      .Sortable()
    .Pageable(pager =>
    {
        pager.ShowPageSizes = true;
    }
      ))