@model IEnumerable<CourierApp.Core.ViewModels.Courier.CourierListItemViewModel>

@(Html
      .Grid(Model)
      .Build(columns =>
      {
          columns.Add(model => model.SecondName).Titled("Nazwisko");
          columns.Add(model => model.FirstName).Titled("Imię");
          columns.Add(model => model.Email).Titled("Email");
          columns.Add(model => model.PhoneNumber).Titled("Numer telefonu");
          columns.Add(model => model.Mark).Titled("Średnia ocena");
      })
      .Empty("No data found")
      .Filterable()
      .Sortable()
      .Pageable()
      )