@using Org.BouncyCastle.Math.EC.Rfc7748
@model CourierApp.Core.ViewModels.ApplicationUser.CreateApplicationUserViewModel

@{
    ViewData["Title"] = "Dodaj użytkownika";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">   
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Hasło</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="row mt-1 text-right">
                        <div class="col-md-4  py-1">
                            <h6><label asp-for="Roles"></label></h6>
                        </div>
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.Role, Model.Roles, "Rola użytkownika", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Stwórz użytkownika</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}